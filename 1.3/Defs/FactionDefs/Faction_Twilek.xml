<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef ParentName="FactionBase">
    <defName>TwilekEmpire</defName>
    <label>Twilek colony</label>
    <description>A colony of the mysterious Twilek race.</description>
    <pawnsPlural>Twilek</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <settlementTexturePath>World/TwilekBaseAltIcon</settlementTexturePath>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Vizier</leaderTitle>
    <factionNameMaker>NamerFactionTribal</factionNameMaker>
    <settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
    <techLevel>Medieval</techLevel>
    <backstoryCategories>
      <li>TwilekBackstory</li>
    </backstoryCategories>
    <factionIconPath>World/TwiIconAlt</factionIconPath>
    <allowedCultures>
      <li>Rustican</li>
    </allowedCultures>
    <visitorTraderKinds>
      <li>Visitor_Twilek_Standard</li>
    </visitorTraderKinds>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <TwilekColonist>50</TwilekColonist>
          <TwilekAcrobat>90</TwilekAcrobat>
          <TwilekGrandVizier>250</TwilekGrandVizier>
          <TwilekRecruit>100</TwilekRecruit>
          <TwilekMerc>130</TwilekMerc>
          <TwilekOperative>130</TwilekOperative>
          <TwilekOperativeElite>170</TwilekOperativeElite>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <TwilekColonist>50</TwilekColonist>
          <TwilekAcrobat>90</TwilekAcrobat>
          <TwilekGrandVizier>250</TwilekGrandVizier>
          <TwilekRecruit>100</TwilekRecruit>
          <TwilekMerc>130</TwilekMerc>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <TwilekTrader>1</TwilekTrader>
        </traders>
        <carriers>
          <Muffalo>2</Muffalo>
          <Dromedary>2</Dromedary>
        </carriers>
        <guards>
          <TwilekAcrobat>90</TwilekAcrobat>
          <TwilekRecruit>100</TwilekRecruit>
          <TwilekMerc>130</TwilekMerc>
          <TwilekOperative>130</TwilekOperative>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <TwilekColonist>50</TwilekColonist>
          <TwilekAcrobat>90</TwilekAcrobat>
          <TwilekGrandVizier>250</TwilekGrandVizier>
          <TwilekRecruit>100</TwilekRecruit>
          <TwilekMerc>130</TwilekMerc>
          <TwilekOperative>130</TwilekOperative>
          <TwilekOperativeElite>170</TwilekOperativeElite>
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>
</Defs>